<%- include("./includes/head") %>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <%- include("./includes/navigation") %>
    <h1>Welcome to Employees Details Management System</h1>
    <br />
    <% if(emp.length>0){ %>
    <div>
      <% for(employees of emp){ %>
      <div class="card">
        <div class="container">
          <h2 class="title">Name :- <%= employees.name %></h2>
          <h3>Email :- <%= employees.email %></h3>
        </div>
        <p>
          <a href="/employees/<%= employees.id %>"><button class="button">Click Here For More Details</button></a>
        </p>
      </div>

      <% } %>
    </div>
    <% }else{ %>
    <h2>No employees details found</h2>
    <% } %>
    <%- include("./includes/footer") %>
